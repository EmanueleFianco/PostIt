
<div class="nota" id="{{id_nota}}" posizione="{{posizione}}">
<div id="bloccata{{id_nota}}" class="block"></div>
    <div class="editnota" id="editnota{{id_nota}}">
     	<img id="edit_button" src="JS/view/Image/editnota.png"></img>
     </div>
     
	<div class="TitoloNota" id="TitoloNota{{id_nota}}" contenteditable="true">{{titolo}}</div>
		
	<div class="colorPicker" id="colorPicker{{id_nota}}" >
        	<a class="color"><div class="colorInner"></div></a>
        	<div class="track"></div>
        	<ul class="dropdown"><li></li></ul>
        	<input type="hidden" class="colorInput"/>
    </div>
	
	<div class="TestoNota" id="TestoNota{{id_nota}}">
		<textarea id="redactor{{id_nota}}">{{testo}}</textarea>
	</div>
	
	<div class="OpzioniNota">
		<div class="DateTime">
			 <img class="orologio" src="JS/view/Image/orologio-icon.png"></img>
			 <input type="text" class="time" id="time{{id_nota}}" value="{{ora_data_avviso}}" />
		</div>
		
		<div class="condivisioni">
		
			<img id="condividi{{id_nota}}" class="imgutente" src="JS/view/Image/condividi.png"></img>
			
			{{#partecipanti}}
			<img id="{{email}}" class="imgutente" src="{{path}}"></img>
			{{/partecipanti}}
			
			<img id="utente{{id_nota}}" class="imgutente" src="{{immagine}}"></img>
		</div>
	
	</div>
	

</div>